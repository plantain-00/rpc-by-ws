{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",

        "lib": [
            "es5",
            "es2015.promise",
            "dom"
        ],

        "strict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,

        "skipLibCheck": true,
        "importHelpers": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true
    }
}